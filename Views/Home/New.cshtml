<h1>Create a New Auction</h1>
<a href="/Dashboard"><button type="button"  class="btn btn-primary" value="Dashboard">Home</button></a>
<a href="/Logout"><button type="button"  class="btn btn-primary" value="Logout">Logout</button></a>
@model Auction_exam.Models.Auction
<div asp-validation-summary="All"></div>
<form asp-controller="Home" asp-action="Add" method="post">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input asp-for="Name"/>
    <br>
    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
    <br>
    <span asp-validation-for="LastBid"></span>
    <label asp-for="LastBid"></label>
    <input asp-for="LastBid"/>
    <br>
    <span asp-validation-for="EndDate"></span>
    <label asp-for="EndDate"></label>
    <input type="date" asp-for="EndDate"/>
    <br>
<button type="submit">Create Auction</button>
</form>